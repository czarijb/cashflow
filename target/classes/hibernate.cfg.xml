        <property name="hibernate.connection.driver class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cashFlowDB</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">23158521</property>
        <property name="hbm2dd1.auto">update</property>
        <property name="show_sql">true</property>

        <mapping resource="com.github.czarijb.model.Income"/>
        <mapping resource="com.github.czarijb.model.Assets"/>
        <mapping resource="com.github.czarijb.model.Expenses"/>
        <mapping resource="com.github.czarijb.model.Liabilities"/>
    </session-factory>
</hibernate-configuration>